<Window x:Class="Alto_IT.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self="clr-namespace:Alto_IT"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alto_IT"
        mc:Ignorable="d"
        Title="Dashboard"
        Loaded="Window_Loaded"
        Width="auto" WindowStartupLocation="CenterScreen">
   
    
    <Grid x:Name="EspaceTravail">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="235"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                

                <TreeView Name="TreeViewNORME" Grid.Row="0" Grid.Column="0" SelectedItemChanged="TreeViewNORME_SelectedItemChanged" Margin="0,0,9.6,9.6" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Segoe UI Semibold" BorderBrush="#00828790">
                    <TreeView.Resources>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock MaxWidth="235"
                                   TextWrapping="Wrap"
                                   Margin="5,10,5,10"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Nom_Norme}" Value="">
                                    <Setter Property="TextBlock.Visibility" Value="Hidden"/>
                                </DataTrigger>
                                                            
                            </Style.Triggers>
                            
                        </Style>
                    </TreeView.Resources>
                    
                    
                    <TreeView.Background>
                        <SolidColorBrush Color="#7FA5D8F7"/>
                    </TreeView.Background>
                    
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type self:Norme}" ItemsSource="{Binding NormeObervCollec}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock  Text="• " TextWrapping="Wrap"/>
                                <TextBlock  Text="{Binding Nom_Norme}" Width="150" TextWrapping="Wrap"/>
                                <TextBlock x:Name="Documentviewer" DockPanel.Dock="Right" VerticalAlignment="Center" Cursor="Help" PreviewMouseUp="DocumentViewer_PreviewMouseUp" ToolTip="{Binding DocumentName}">
                                   <Image Name="Img" Source="https://cdn.icon-icons.com/icons2/1129/PNG/512/fileinterfacesymboloftextpapersheet_79740.png" Width="20" Height="20" >
                                       <Image.Style>
                                           <Style TargetType="Image" >
                                               <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Nom_Norme}" Value="Normes">
                                                         <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                     </DataTrigger>
                                                   <DataTrigger Binding="{Binding Nom_Norme}" Value="Documentation">
                                                         <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                     </DataTrigger>    
                                               </Style.Triggers>
                                           </Style>
                                       </Image.Style>
                                           
                                   </Image>
                                </TextBlock>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
            <Frame Grid.Column="1" Grid.Row="0" x:Name="Frame_Vue_Circulaire" Margin="-10,50,0,-0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  ScrollViewer.VerticalScrollBarVisibility="Visible" NavigationUIVisibility="Hidden"/>
            <Frame Grid.Column="1" Grid.Row="0" x:Name="Frame_Vue_Documentation" Margin="-0,50,0,-0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  ScrollViewer.VerticalScrollBarVisibility="Visible" NavigationUIVisibility="Hidden"/>
        </Grid>

        <Grid Name="GridControle_Norme" Height="50" VerticalAlignment="Top" Margin="245,0,-0.4,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Button x:Name="Ajout_Norme" Click="Ajout_Norme_Click"  Content="Ajouter une Norme"/>
            <Button x:Name="Modif_Norme" Click="Modif_Norme_Click" Content="Modifier une Norme" Grid.Column="1"/>
            <Button x:Name="Supr_Norme" Click="Supr_Norme_Click" Content="Supprimer une Norme" Grid.Column="2" Margin="0,0,0,-0.4"/>
        </Grid>

        <Grid Name="GridControle_exigence" Height="50" VerticalAlignment="Top" Margin="245,0,0,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Button x:Name="Ajout_exigence" Click="Ajout_exigence_Click" Content="Ajouter une exigence"/>
            <Button x:Name="Modif_exigence" Click="Modif_exigence_Click" Content="Modifier une exigence" Grid.Column="1"/>
            <Button x:Name="Supr_exigence" Click="Supr_exigence_Click" Content="Supprimer une exigence" Grid.Column="2" Margin="0,0,10.4,-0.4"/>
        </Grid>


    </Grid>

</Window>

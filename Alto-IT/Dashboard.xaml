<Window x:Class="Alto_IT.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:self="clr-namespace:Alto_IT"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alto_IT"
        mc:Ignorable="d"
        Title="Dashboard"
        Loaded="Window_Loaded">
    
    <Grid x:Name="EspaceTravail">
        <TreeView Name="treeview">
            <TreeView.Resources>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <TextBlock Width="150"
                                   TextWrapping="Wrap"
                                   Text="{Binding}" 
                                   Margin="5,10,0,10"
                                   />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TreeView.Resources>
            <TreeViewItem Header="Conformité">
                <TreeViewItem Header="Gestion des normes"></TreeViewItem>
                <TreeViewItem Header="Cloud Computing Circular 19/714 from CSSF - MATERIAL" ></TreeViewItem>
                <TreeViewItem Header="Cloud Computing Circular 19/714 from CSSF - NON MATERIAL"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Appréciations">
                <TreeViewItem Header="Mesures de sécurtié"></TreeViewItem>
                <TreeViewItem Header="Vulnérabilités"></TreeViewItem>
                <TreeViewItem Header="Risques"></TreeViewItem>
                <TreeViewItem Header="Évènements redoutés"></TreeViewItem>
            </TreeViewItem>
            <TreeViewItem Header="Documentation">
                <TreeViewItem Header="?????"></TreeViewItem>
            </TreeViewItem>
        </TreeView>

        
        <TextBlock Name="VueContent" Margin="150,0,0,0" />
    </Grid>
</Window>
